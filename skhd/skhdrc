# Restart yabai & skhd
alt + shift - r : yabai --restart-service && skhd --restart-service

# Virtual Desktops
alt - 1 : yabai -m space --focus 1
alt - 2 : yabai -m space --focus 2
alt - 3 : yabai -m space --focus 3
alt - 4 : yabai -m space --focus 4
alt - 5 : yabai -m space --focus 5
alt - 6 : yabai -m space --focus 6
alt - 7 : yabai -m space --focus 7
alt - 8 : yabai -m space --focus 8

# Move Current Window To These Virtual Desktops
alt + shift - 1 : yabai -m window --space 1 --focus
alt + shift - 2 : yabai -m window --space 2 --focus
alt + shift - 3 : yabai -m window --space 3 --focus
alt + shift - 4 : yabai -m window --space 4 --focus
alt + shift - 5 : yabai -m window --space 5 --focus
alt + shift - 6 : yabai -m window --space 6 --focus
alt + shift - 7 : yabai -m window --space 7 --focus
alt + shift - 8 : yabai -m window --space 8 --focus

# Move Focus With HJKL
cmd + shift - h : yabai -m window --focus west
cmd + shift - j : yabai -m window --focus south 
cmd + shift - k : yabai -m window --focus north
cmd + shift - l : yabai -m window --focus east

# Move Windows In Clockwise Direction
cmd + shift - r : ~/yabai-cycle-clockwise.sh

# Toggle Float
alt + shift - f : yabai -m window --toggle float
